<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        >
        <Toolbar
            android:id="@+id/mytoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_col"
            android:paddingBottom="5dp"
            >
            <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
                >
            <EditText
                android:id="@+id/etku"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Cari Buku Cerita, Pemrograman, Horor"
                android:textColorHint="#676060"
                android:textSize="13sp"
                android:textColor="#272626"
                android:textAlignment="textStart"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableStart="@drawable/baseline_search_24"
                android:paddingStart="15dp"
                android:drawablePadding="10dp"
                android:background="@drawable/search"
                android:layout_marginEnd="15dp"
                />
        </RelativeLayout>
        </Toolbar>
        <View
            android:id="@+id/shadow_toolbar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/mytoolbar"
            android:background="@drawable/toolbar_dropshadow"
            android:visibility="invisible"
            />
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rv_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_toolbar"
            android:layout_marginTop="-40dp"
            android:elevation="1dp"
            >
    <ScrollView
        android:id="@+id/sv_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null"
        android:paddingBottom="58dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            >
            <RelativeLayout
                android:id="@+id/myrelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner"
                android:paddingTop="40dp"
                >
                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/popbold"
                    android:paddingRight="10dp"
                    android:text="MAIBUK"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <TextView
                    android:id="@+id/user_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MaibukTim"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/popbold"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:drawableStart="@drawable/baseline_account_circle_24"
                    android:drawablePadding="8dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/main_title"
                    android:background="#ffffff"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    />
                <TextView
                    android:id="@+id/greeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat Siang! MaibukTim"
                    android:layout_below="@id/main_title"
                    android:theme="@style/white.font"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/greeting"
                    android:text="Mau Baca Buku Apa Hari ini?"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>
            <HorizontalScrollView
                android:id="@+id/icon_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@null"
                android:layout_below="@id/myrelative"
                android:layout_marginTop="20dp"
                >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_menu_corner"
                >
                    <LinearLayout
                        android:id="@+id/voucher_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="6dp"
                        android:background="@drawable/promo"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Promo\nHari ini"
                            android:layout_marginTop="5dp"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/top_picks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_toRightOf="@id/voucher_book"
                        android:layout_marginLeft="20dp"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="6dp"
                            android:background="@drawable/top_book"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top Picks"
                            android:textAlignment="center"
                            android:layout_marginTop="5dp"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toRightOf="@id/top_picks"
                    android:layout_marginLeft="20dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/audio_book"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AudioBuk"
                        android:layout_marginTop="7dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/geografi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toRightOf="@id/audio"
                    android:layout_marginLeft="20dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/geografi_icon"
                        android:padding="6dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geografi\nE-Buk"
                        android:layout_marginTop="5dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/berkendara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toRightOf="@id/geografi"
                    android:layout_marginStart="20dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/drive_icon"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berkendara\nE-Buk"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/horor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toEndOf="@id/berkendara"
                    android:layout_marginStart="17dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/hororbook"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horror\nE-Buk"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pemrograman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toEndOf="@id/horor"
                    android:layout_marginStart="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_pemrograman"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemrograman\nE-buk"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/musik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toEndOf="@id/pemrograman"
                    android:layout_marginStart="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_musik"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Musik\nE-buk"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/petualangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toEndOf="@id/musik"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/icon_petualangan"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Petualangan\nE-buk"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                </RelativeLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/slide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_menu"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Quotes of the Day "
                android:textSize="18sp" />
            <TextView
                android:id="@+id/slide_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slide_title"
                android:layout_marginStart="13dp"
                android:text="Liat-liat quotes dulu biar dapat motivasi"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quote_slide_layout"
                android:layout_below="@id/slide_teks"
                >
                <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/quote_slide"
                android:layout_width="341dp"
                android:layout_height="184dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:iss_period="2700"
                app:iss_auto_cycle="true"
                app:iss_delay="2700"
                app:iss_corner_radius="20"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/history_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quote_slide_layout"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Riwayat Baca"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/history_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_title"
                android:layout_marginStart="15dp"
                android:text="Buku-buku yang udah kamu baca"
                android:textSize="13sp" />
            <HorizontalScrollView
                android:id="@+id/history_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_teks"
                android:scrollbarThumbHorizontal="@null"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
            <ImageView
                android:id="@+id/book1"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_1"
                />
            <ImageView
                android:id="@+id/book2"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book1"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_2"
                />
            <ImageView
                android:id="@+id/book3"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book2"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_3"
                />
            <ImageView
                android:id="@+id/book4"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book3"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_4"
                />
            <ImageView
                android:id="@+id/book5"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book4"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_5"
                />
            <ImageView
                android:id="@+id/book6"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book5"
                android:layout_marginStart="15dp"
                android:background="@drawable/book_6"
                />
            <ImageView
                android:id="@+id/book7"
                android:layout_width="65.41dp"
                android:layout_height="98.43dp"
                android:layout_toEndOf="@id/book6"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/book_7"
                />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Tale of\nMonster Falls"
                        android:layout_below="@id/book1"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="65.41dp"
                        android:layout_height="wrap_content"
                        android:text="Other Side"
                        android:layout_toEndOf="@id/book1"
                        android:layout_below="@id/book2"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="65.41dp"
                        android:layout_height="wrap_content"
                        android:text="Theory of\nHappiness"
                        android:layout_toEndOf="@id/book2"
                        android:layout_below="@id/book3"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="65.41dp"
                        android:layout_height="wrap_content"
                        android:text="Two Side"
                        android:layout_toEndOf="@id/book3"
                        android:layout_below="@id/book4"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Beauty \nof The Night"
                        android:layout_toEndOf="@id/book4"
                        android:layout_below="@id/book5"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Misty Forest"
                        android:layout_toEndOf="@id/book5"
                        android:layout_below="@id/book6"
                        android:layout_marginStart="15dp"
                        />
                    <TextView
                        android:layout_width="65.41dp"
                        android:layout_height="wrap_content"
                        android:text="Beauty of\nNature"
                        android:layout_toEndOf="@id/book6"
                        android:layout_below="@id/book7"
                        android:layout_marginStart="15dp"
                        />
                </RelativeLayout>
            </HorizontalScrollView>
            <TextView
                android:id="@+id/store_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/history_books"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Store Koleksi E-Book"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/store_teks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/store_title"
                android:layout_marginStart="15dp"
                android:text="Penyedia layanan buat baca E-Book terbaik"
                android:textSize="13sp" />
            <HorizontalScrollView
                android:layout_below="@id/store_teks"
                android:layout_width="match_parent"
                android:scrollbarThumbHorizontal="@null"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:id="@+id/book_store_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    >
                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="127dp"
                        android:background="@drawable/book_store_1"/>
                    <TextView
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="5dp"
                        android:text="Buka Buku, Kids Book Store"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_store_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    >
                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="127dp"
                        android:background="@drawable/book_store_2"/>
                    <TextView
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="3dp"
                        android:text="The Booktown, Book Store"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_store_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    >
                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="127dp"
                        android:background="@drawable/book_store_3"/>
                    <TextView
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="3dp"
                        android:text="Liceria, Book Store"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_store_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    >
                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="127dp"
                        android:background="@drawable/book_store_4"/>
                    <TextView
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="3dp"
                        android:text="Salford, Book Store"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_store_5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    >
                    <ImageView
                        android:layout_width="207dp"
                        android:layout_height="127dp"
                        android:background="@drawable/book_store_5"/>
                    <TextView
                        android:layout_width="207dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="3dp"
                        android:text="Thynk Unlimited, Book Store"
                        />
                </LinearLayout>
            </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/home_icon_bar"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar1_home_blue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Home"
                android:textColor="@color/main_col"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mybook_icon"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar2_mybook"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="MyBook"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cart_icon"
            android:layout_marginEnd="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar3_cart"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cart"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profil_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bar3_profil"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="About"
                />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>