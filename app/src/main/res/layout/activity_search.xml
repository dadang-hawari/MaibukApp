<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Search">

    <Toolbar
        android:id="@+id/mytoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:elevation="2dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/back_button_sc"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_button"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="15dp"
                />
            <EditText
                android:id="@+id/mysearch"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textSize="13sp"
                android:hint="Telusuri Buku"
                android:textColorHint="#676060"
                android:textColor="#272626"
                android:textAlignment="textStart"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableStart="@drawable/baseline_search_24"
                android:paddingStart="15dp"
                android:drawablePadding="10dp"
                android:background="@drawable/search"
                android:layout_marginEnd="20dp"
                />
        </LinearLayout>
    </Toolbar>
    <View
        android:id="@+id/shadow_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_below="@id/mytoolbar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Tidak ada data yang ditampilkan"
        android:textSize="13sp"
        android:textColor="#989797"
        />
</RelativeLayout>